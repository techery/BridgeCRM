<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!--Common-->
        <item name="colorPrimary">#ff22b64f</item>
        <item name="colorPrimaryDark">#ff2e875d</item>
        <item name="colorAccent">#ffc74548</item>
        <!--Window-->
        <item name="windowActionBar">false</item>
        <!--ActionBar-->
        <item name="android:actionBarItemBackground">@null</item>
        <item name="android:actionButtonStyle">@style/ActionButtonStyle</item>
        <item name="android:actionOverflowButtonStyle">@style/OverflowButtonStyle</item>
        <!--Widgets-->
        <!--Dialogs-->
        <item name="android:dialogTheme">@style/Dialog.NoBackground.SlideBottomAndFade</item>
    </style>

    <!-- Main theme, override for newer api -->
    <style name="AppTheme" parent="AppBaseTheme"></style>

    <style name="NoAnimTheme" parent="android:Theme.Translucent.NoTitleBar">
        <item name="android:windowAnimationStyle">@null</item>
    </style>

</resources>